{% extends 'base.html.twig' %}

{% block title %}Register page{% endblock %}

{% block body %}
    <style>
        .input {width:80%;text-align: center;margin-left:auto;margin-right:auto;}
        .input-f {margin-left: 25%}
        .btn {margin: 25px}
    </style>
    <form  method="POST" action="{{ path('register-store')}}" class="input">
        <div style="text-align: center">
            <h1 style="margin: 50px;font-family: 'Bungee Inline', cursive;">Register form</h1>
        </div>

        <div style="justify-items: center;" class="form-group row ml-1">
            <label for="email" class="form-control col-sm-1 input-f">Email</label>
            <input type="text" class="form-control col-sm-4" id="email" name="email">
        </div>

        <div class="form-group row ml-1">
            <label style="justify-self: center" for="password" class="form-control col-sm-1 input-f">Password</label>
            <input type="text" class="form-control col-sm-4" id="password" name="password" minlength="5">
        </div>

        <div class="form-group ml-1">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>

    </form>
{% endblock %}

