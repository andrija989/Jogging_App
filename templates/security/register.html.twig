{% extends 'base.html.twig' %}

{% block title %}Register page{% endblock %}

{% block body %}
    <form style="text-align: center" method="POST" action="{{ path('register-store')}}" class="register-form">
        <div style="text-align: center">
            <h1>Register form</h1>
        </div>

        <div style="justify-items: center;" class="form-group row ml-1">
            <label for="email" class="form-control col-sm-1">Email</label>
            <input type="text" class="form-control col-sm-4" id="email" name="email">
        </div>

        <div class="form-group row ml-1">
            <label style="justify-self: center" for="password" class="form-control col-sm-1">Password</label>
            <input type="text" class="form-control col-sm-4" id="password" name="password">
        </div>

        <div class="form-group ml-1">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>

    </form>
{% endblock %}

