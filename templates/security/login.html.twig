{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <style>
    .input {width:80%;text-align: center;margin-left:auto;margin-right:auto;}
        .input-f {margin-left: 40%}
        .btn {margin: 25px}
    </style>
    <form class="input" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 style="margin: 25px;font-family: 'Bungee Inline', cursive;">Please sign in</h1>
        <div class="input-f">
        <label for="email" class="sr-only">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control col-sm-4" placeholder="Email" required autofocus>
        </div>
        <div class="input-f">
        <label for="password" class="sr-only">Password</label>
        <input type="password" name="password" id="password" class="form-control col-sm-4" placeholder="Password" required>
        </div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </form>
{% endblock %}