<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    </head>
    <style>
        h1 {font-style: oblique;}
        @font-face {
            font-family: "Bungee Inline";
            src: url("https://fonts.googleapis.com/css?family=Bungee+Inline&display=swap");
            font-weight: normal;
            font-style: normal;
        }
    </style>
    <nav style="justify-content: space-between !important;" class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Jogging App</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div id="navbarNavAltMarkup">
            <div class="navbar-nav">
                {% if app.user %}
                <a class="nav-item nav-link active" href="{{ path('home', {'id': app.user.getId()}) }}">User records</a>
                    {% if is_granted('ROLE_USER_MANAGER') %}
                        <a class="nav-item nav-link" href="/administrator">Administrator page</a>
                        {% endif %}
                    {% if is_granted('ROLE_ADMINISTRATOR') %}
                        <a class="nav-item nav-link" href="/administrator">Administrator page</a>
                    {% endif %}
                        <button><a  class="btn btn-light" href="{{ path('logout') }}">Logout</a></button>
                {% endif %}
                {% if not app.user %}
                <a class="nav-item nav-link" href="/login">Login</a>
                <a class="nav-item nav-link" href="/register">Register</a>
                {% endif %}
            </div>
        </div>
    </nav>
    <body style="margin-left:auto;margin-right:auto;">
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
